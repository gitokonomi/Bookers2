<div class="container">
  <div class="row">
    <div class="col-md-3">

      <!--部分テンプレート-->
      <%= render 'books/newbook', {book: @book , user: @user} %>

    </div>

    <div class="col-md-8 offset-md-1">
      <p>Books</p>
      <!-- ユーザーの投稿一覧テーブル -->
      <table>
	      <thead>
		      <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <!--投稿本image-->
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <!--タイトル＿本詳細リンク-->
              <%= link_to book.title , book_path(book.id) %>
            </td>
            <td>
              <!--投稿本文-->
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>