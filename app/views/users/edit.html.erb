<!--バリデーション-->
<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model:@user do |f| %>

<h2>User info</h2>

<p>Name</p>
  <%= f.text_field :name %>

<p>Image</p>
  <%= f.file_field :profile_image, accept: "image/*" %>
<p>Introduction</p>
  <%= f.text_area :introduction %>
<p>
  <%= f.submit 'Update User' %>
</p>

<% end %>