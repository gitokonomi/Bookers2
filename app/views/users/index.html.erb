<div class="container">
  <div class="row">
    <div class="col-md-3">

      <!--部分テンプレート-->
      <%= render 'books/newbook', {book: @book , user: @user} %>

    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <% @users.each do |user| %>
        <div>
          <p>image</p>
          <p><%= image_tag user.get_profile_image(100,100) %><p/>

          <p>name</p>
          <p><%= user.name %></p>

          <p><%= link_to "Show", user_path(user.id) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>