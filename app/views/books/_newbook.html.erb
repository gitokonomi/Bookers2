<h2>User info</h2>

<div>
  <!--画像-->
  <%= image_tag user.get_profile_image(100,100) %>

  <!--ユーザ名-->
  <p>name</p>
  <p><%= user.name %></p>
  <!--自己紹介-->
  <p>introduction</p>
  <p><%= user.introduction %></p>

  <!--プロフィール編集-->
  <% if user == current_user %>
    <p>
      <%= link_to edit_user_path(user), class: "btn btn-secondary" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </p>
  <% end %>
</div>


<!--新規投稿-->
<h2>New book</h2>

<%= form_with model: book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <p>
  <%= f.submit 'Create Book', class: "btn btn-secondary" %>
  </p>

<% end %>