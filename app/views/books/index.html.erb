<div class="container">
  <!--バリデーション-->
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors occurred.
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="row">

    <div class="col-md-3">
      <!--部分テンプレート-->
      <%= render 'newbook', {book: @book , user: @user} %>
    </div>


    <div class="col-md-8 offset-md-1">
      <!--投稿一覧-->
      <h2>Books</h2>

      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <!--ユーザー画像-->
              <%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user_id) %>
            </td>
            <td>
              <!--タイトル-->
              <%= link_to book.title,book_path(book.id) %>
            </td>
            <td>
              <!--内容-->
              <%= book.body %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>