<div class="container">
  <div class="row">
    <!--部分テンプレート-->
    <div class="col-md-3">
      <%= render 'books/newbook', {book: @booknew , user: @user} %>
    </div>


    <div class="col-md-8 offset-md-1">
      <p>Book detail</p>

      <table>
	      <thead>
		      <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td>
              <!--プロフ画像とリンク-->
              <%= link_to user_path(@book.user) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% end %></br>
              <!--ユザ名前-->
              <%= link_to @user.name, user_path(@book.user) %>
            </td>
            <td>
              <!--本タイトル-->
              <%= link_to @book.title, book_path(@book) %>
            </td>
            <td>
              <!--本本文-->
              <%= @book.body %>
            </td>
            <td>
              <% if @book.user_id == current_user.id %>
              <!--Editボタン-->
              <%= link_to "Edit", edit_book_path(@book) %>
            </td>
            <td>
              <!--Destroyボタン-->
              <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "削除しますか？"} %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>