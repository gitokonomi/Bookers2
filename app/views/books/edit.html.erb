<!--バリデーション-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model:@book do |f| %>

<h2>Editing Book</h2>

<p>Title</p>
  <%= f.text_field :title %>

<p>Opinion</p>
  <%= f.text_area :body %>
<p>
  <%= f.submit 'Update Book' %>
</p>

<p>
<%= link_to "Show", book_path(@book) %>
|
<%= link_to "Back", books_path %>
</p>

<% end %>